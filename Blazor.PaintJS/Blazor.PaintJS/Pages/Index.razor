@page "/"

<PageTitle>Index</PageTitle>

<nav>
    <input type="color" @onchange="OnColorChange">
    @if(_fileSystemAccessSupported) {
        <button @onclick="OpenLocalFile">Open file</button>
        <button @onclick="SaveFileLocal">Save file</button>
    } else {
        <InputFile OnChange="(Func<InputFileChangeEventArgs, Task>)OpenFile"></InputFile>
        <button @onclick="DownloadFile">Download</button>
    }
    @*<button @ref="_clickBtn">Copy</button>*@
    <button @onclick="Copy">Copy</button>
    <button @onclick="Paste">Paste</button>
    <button @onclick="Share">Share</button>
    <button @onclick="Cleanup">Clean up</button>
</nav>

<div style="width: 100%; height: 100%; overflow: hidden; touch-action: none;">
    <Canvas @ref="_canvas"
            id="paint-canvas"
            @onpointerdown="OnPointerDown"
            @onpointerup="OnPointerUp"
            @onpointermove="OnPointerMove"
            width="600"
            height="480">
    </Canvas>
</div>